<MyField@TextInput>
    size_hint: None, None
    size: "100dp", "32dp"
    input_filter: "int"
    pos_hint: {"center_y": .5}


<MyLabel@Label>
    pos_hint: {"center_y": .5}


<MyScreenView>

    BoxLayout:
        orientation: "vertical"
        spacing: "12dp"
        padding: "12dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        background_color: 0.9, 0.9, 0.9, 1

        Label:
            text: "Calculate two numbers:"
            pos_hint: {"center_x": .5}


        BoxLayout:
            spacing: "12dp"

            MyField:
                id: number_1
                # Bind the edit completion event to the controller method.
                on_focus: root.set_c(self.focus, int(self.text or 0))

            MyLabel:
                text: "+"


            MyField:
                id: number_2
                # Bind the edit completion event to the controller method.
                on_focus: root.set_d(self.focus, int(self.text or 0))

            MyLabel:
                text: "="


            MyField:
                id: result
